<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<!--
  USB/IP Bridge Watchdog for SMS Gateway
  ───────────────────────────────────────
  Keeps the SIM7600 modem bridge alive:
    - usbipd (host server)
    - USB/IP attach (Docker VM ↔ macOS)
    - sms-api container health

  Install:
    cp net.backvision.usbip-watchdog.plist ~/Library/LaunchAgents/
    launchctl load ~/Library/LaunchAgents/net.backvision.usbip-watchdog.plist

  Uninstall:
    launchctl unload ~/Library/LaunchAgents/net.backvision.usbip-watchdog.plist
    rm ~/Library/LaunchAgents/net.backvision.usbip-watchdog.plist

  Logs:
    tail -f /tmp/usbip-watchdog.log
-->
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>net.backvision.usbip-watchdog</string>

  <key>ProgramArguments</key>
  <array>
    <string>/bin/bash</string>
    <string>-c</string>
    <string>exec bash USBIP_WATCHDOG_PATH</string>
  </array>

  <!-- Start at login / load -->
  <key>RunAtLoad</key>
  <true/>

  <!-- Restart if the watchdog itself crashes -->
  <key>KeepAlive</key>
  <true/>

  <!-- Don't restart more than once per 10 seconds -->
  <key>ThrottleInterval</key>
  <integer>10</integer>

  <!-- Log stdout/stderr -->
  <key>StandardOutPath</key>
  <string>/tmp/usbip-watchdog-launchd.log</string>
  <key>StandardErrorPath</key>
  <string>/tmp/usbip-watchdog-launchd.log</string>

  <!-- Inherit user PATH so docker, lsof, cargo are found -->
  <key>EnvironmentVariables</key>
  <dict>
    <key>PATH</key>
    <string>/usr/local/bin:/opt/homebrew/bin:/usr/bin:/bin:/usr/sbin:/sbin</string>
    <key>SMS_API_ROOT</key>
    <string>SMS_API_ROOT_PLACEHOLDER</string>
  </dict>
</dict>
</plist>
